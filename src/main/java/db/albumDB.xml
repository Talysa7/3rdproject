<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  	PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  	"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="album">

	<insert id="addPhoto" parameterType="db.AlbumDataBean">
		insert into pao_album(photo_url,user_id,board_no,photo_reg_date)
		values(#{photo_url},#{user_id},#{board_no},sysdate)
	</insert>
	<delete id="delPhoto" parameterType="int">
		delete from pao_album where
		photo_id=#{photo_id}
	</delete>
	<select id="getAlbumCount" resultType="int">
		SELECT count(*)
		FROM pao_album
	</select>
	<select id="getAllPhotos" resultType="db.AlbumDataBean">
		SELECT * 
		FROM pao_view_album 
		ORDER BY photo_reg_date DESC
	</select>
	<select id="getPhotosByBoardNo" parameterType="java.util.Map" resultType="db.AlbumDataBean">
		select *
		from pao_view_album
		where board_no=#{board_no}
		order by photo_reg_date DESC
		limit #{pageStart}, #{pageEnd}
	</select>
	<select id="getPhoto_urls" parameterType="int" resultType="String">
		select photo_url from pao_album where board_no=#{board_no}
	</select>
	
	<select id="getThumbnail" parameterType="String" resultType="String">
		select photo_url from pao_thumbnail where b_id=#{b_id}
	</select>
</mapper>